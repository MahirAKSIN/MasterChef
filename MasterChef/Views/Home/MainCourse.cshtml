
@using EntityLayer.Concrete;
@model List<Food>

@{

    ViewData["Title"] = "Food List";
    Layout = "~/Views/Shared/UserLayout.cshtml";

}
<link href="~/web/css/bootstrap.css" rel="stylesheet" />


<link href="~/css/site.css" rel="stylesheet" /><a href="single.html">
    <img src="~/web/images/h.jpg" class="card-img-top img-fluid">
</a>

@*class="main-content-w3layouts-agileits"*@

<div class="d-flex justify-content-center align-content-center my-4 " >
    <a href="/Food/Create" class="btn btn-outline-primary rounded-0 text-black-50 rounded-0 vw-100">Yemek Ekle</a>
</div>

<section>
    <div class="container">
        @*<h3 class="tittle">Yemekler</h3>*@
        @*class="inner-sec "*@
        <div>
            <div class="left-blog-info-w3layouts-agileits text-left">
                <div class="row">
                    @foreach (var food in Model)
                    {
                        <div class="col-lg-4 card my-1  m-md-auto" width="50">
                            <a href="single.html">
                                <img src="~/web/images/@food.FoodImage" class="card-img-top img-fluid">
                            </a>
                            <div class="card-body">
                                <ul class="blog-icons my-4">
                                    <li>
                                        <a href="#">
                                            <i class="far fa-calendar-alt"></i>@(((DateTime)food.FoodCreateDate).ToString("dd-MMM-yyyy"))
                                        </a>
                                    </li>
                                    <li class="mx-2">
                                        <a href="#">
                                            <i class="far fa-comment"></i>
                                        </a>
                                    </li>
                                    @*<li class="mx-2">
                                            <a href="#">
                                                <i class="far fa-comment"></i>@food.Category.CategoryName
                                            </a>
                                        </li>*@
                                    <li>
                                        <a href="#">
                                            <i class="fas fa-eye"></i>0
                                        </a>
                                    </li>

                                </ul>
                                <h5 class="card-title">
                                    <a href="#">@food.FoodTitle</a>
                                </h5>
                                <p class="card-text mb-3">@food.FoodContent </p>
                                <div class="row">

                                    <div class="d-flex justify-content-center align-content-center">

                                        <div class="col*-xxl-6 mx-auto">

                                            <button class="border-0 rounded bg-primary "><a href="#" class="btn  text-dark my-1">Detaylari</a></button>
                                            <button class=" border-0 rounded bg-success "><a href="#" class="btn text-dark my-1">Siparis Ver</a></button>

                                        </div>
                                    </div>
                                </div>
                            </div>
                        </div>
                    }
                </div>
            </div>
        </div>
    </div>
</section>

