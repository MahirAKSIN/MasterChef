@using EntityLayer.Concrete;
@model FoodModel
<h5 class="display-4">Create Food</h5>
<hr />
<form asp-controller="Admin" asp-action="Create" method="post" enctype="multipart/form-data">
    <div class="row">
        <div class="col-md-8">
            @*<div asp-validation-summary="All" class="text-danger"></div>*@
            <div class="form-group row mb-2">
                <label class="col-form-label col-sm-3">Name:</label>
                <div class="col-sm-9">
                    <input type="text" asp-for="FoodTitle" class="form-control" />
                    <span asp-validation-for="FoodTitle" class="text-danger"></span>
                </div>
            </div>

            <div class="form-group row mb-2">
                <label class="col-form-label col-sm-3">Description:</label>
                <div class="col-sm-9">
                    <input type="text" asp-for="FoodContent" class="form-control" />
                    <span asp-validation-for="FoodContent" class="text-danger"></span>
                </div>
            </div>
          
            <div class="form-group row mb-2">
                <label class="col-form-label col-sm-3">Image:</label>
                <div class="col-sm-9">
                    <input type="file" name="file" class="form-control" />
                    <span class="text-danger">@ViewBag.ImageMessage</span>
                </div>
            </div>

            <div class="form-group row mb-2">
                <label class="col-form-label col-sm-3">Price:</label>
                <div class="col-sm-9">
                    <input type="text" asp-for="FoodCreateDate" class="form-control" />
                    <span asp-validation-for="FoodCreateDate" class="text-danger"></span>
                </div>
            </div>
            
            <div class="form-group row mb-2">
                <div class="col-sm-9">
                    <button type="submit" class="btn btn-primary">Save Product</button>
                </div>
            </div>
        </div>
        <div class="col-md-4">

            @foreach (var item in (List<Category>)ViewBag.Categories)
            {
                <div class="form-check">
                    <input type="checkbox" class="form-check-input"
                           value="@item.CategoryId"
                           name="categoryIds" id="category_@item.CategoryId"
                           @{ try { @if (Model != null) { @(Model.Category.Any(i => i.CategoryId == item.CategoryId) ? "checked" : "") }  } catch (Exception) { } } />
                    <label class="form-check-label">@item.CategoryName</label>
                </div>
            }
            <span class="text-danger">@ViewBag.CategoryMessage</span>
            
           
        </div>
    </div>
</form>